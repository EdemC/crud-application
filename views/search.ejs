<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search "<%= searchNoSpecialChar %>"</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
        </div>
    </div>
</div>


<div class="table-responsive">
    <% if (searchResult.length > 0) { %>
     
        <table class="table table-striped table-sm">

            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>

            <tbody>
                <% searchResult.forEach(result => { %>
                    <tr class="align-middle">
                        <td><%= result.firstName %></td>
                        <td><%= result.lastName %></td>
                        <td><%= result.phoneNumber %></td>
                        <td><%= result.email%></td>
                        <td>

                            <div class="d-flex flex-row justify-content-end gap-2">

                                <a href="/view/<%= result._id %>" type="button" class="btn btn-primary btn-small">
                                    <i class="bi bi-eye"></i>
                                </a>
    
                                <a href="/edit/<%= result._id %>" type="button" class="btn btn-warning btn-small">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                    
                                <form action="/delete/<%= result._id %>?_method=DELETE" method="post" class="position-relative">
                                    <button type="submit" class="btn btn-danger btn-small">
                                        <i class="bi bi-person-x"></i>
                                    </button>
                                </form>
    
                            </div>

                        </td>
                    </tr>
                <% }) %>
            </tbody>

        </table>

    <% } else { %>
        <h2>No Results Found</h2>
    <% } %>
</div>